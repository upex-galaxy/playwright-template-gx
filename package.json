{
  "name": "playwright-ts",
  "version": "18",
  "description": "playwright project with typescript and azure devops integration",
  "main": "index.js",
  "scripts": {
    "pw:install": "npx playwright install --with-deps",
    "test:plan": "npx playwright test --reporter=list --project=chromium --list",
    "test:ui": "npx playwright test --ui",
    "test:trace": "npx playwright show-trace",
    "test:debug": "npx playwright test --project=chromium --debug",
    "test": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:edge": "npx playwright test --project=edge",
    "test:iphone": "npx playwright test --project=iphone",
    "test:ci": "npx playwright test --workers=4",
    "regression:chrome": "npx playwright test -c playwright.chrome.config.ts --project=chromium",
    "regression:firefox": "npx playwright test -c playwright.firefox.config.ts --project=firefox",
    "regression:edge": "npx playwright test -c playwright.edge.config.ts --project=edge",
    "regression:iphone": "npx playwright test -c playwright.iphone.config.ts --project=iphone",
    "regression:ci": "npx playwright test --workers=4",
    "show:report:chrome": "npx playwright show-report test-html-report/chrome",
    "show:report:firefox": "npx playwright show-report test-html-report/firefox",
    "show:report:edge": "npx playwright show-report test-html-report/edge",
    "show:report:iphone": "npx playwright show-report test-html-report/iphone",
    "clean:reports": "rm -rf test-results && rm -rf test-junit-report && rm -rf test-html-report && rm -rf allure-results",
    "allure:open": "allure generate --clean",
    "allure:gen:chrome": "allure generate --clean -o allure-report/chrome",
    "allure:gen:firefox": "allure generate --clean -o allure-report/firefox",
    "allure:gen:edge": "allure generate --clean -o allure-report/edge",
    "allure:gen:iphone": "allure generate --clean -o allure-report/iphone",
    "allure:report": "npm run allure:open && allure open --host localhost --port 7070",
    "prettier:check": "npx prettier --check tests/**/*.ts",
    "prettier:fix": "npx prettier --write tests/**/*.ts",
    "lint:check": "npx eslint tests/**/*.ts",
    "lint:fix": "npx eslint --fix tests/**/*.ts"
  },
  "keywords": [
    "playwright"
  ],
  "author": "upex",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@alex_neo/playwright-azure-reporter": "^1.8.0",
    "@playwright/test": "^1.41.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "20.9.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "allure-commandline": "2.24.1",
    "allure-playwright": "2.9.2",
    "dotenv": "16.0.3",
    "eslint": "8.53.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "lodash": "^4.17.21",
    "prettier": "3.1.0",
    "typescript": "5.2.2"
  }
}
