{
	"name": "playwright-ts",
	"version": "18",
	"description": "playwright project with typescript and azure devops integration",
	"main": "index.js",
	"scripts": {
		"pw:install": "npx playwright install --with-deps",
		"test:plan": "npx playwright test --project=chromium --list",
		"test": "npx playwright test --project=chromium --headed",
		"debug": "npx playwright test --project=chromium --debug --reporter=list",
		"regression": "npx playwright test --project=chromium",
		"test:chrome": "npx playwright test --project=chromium --headed --reporter=list",
		"test:firefox": "npx playwright test --project=firefox --headed --reporter=list",
		"test:edge": "npx playwright test --project=msedge --headed --reporter=list",
		"allure:clean": "allure generate --clean",
		"allure:report": "allure generate --clean && allure open --host localhost --port 9090",
		"prettier:write": "npx prettier --write tests/**/*.ts",
		"prettier:check": "npx prettier --check tests/**/*.ts",
		"lint:check": "npx eslint tests/**/*.ts",
		"lint:fix": "npx eslint --fix tests/**/*.ts"
	},
	"keywords": [
		"playwright"
	],
	"author": "upex",
	"license": "ISC",
	"type": "module",
	"devDependencies": {
		"@playwright/test": "1.39.0",
		"@types/node": "20.9.0",
		"@typescript-eslint/eslint-plugin": "6.11.0",
		"@typescript-eslint/parser": "6.11.0",
		"allure-commandline": "2.24.1",
		"allure-playwright": "2.9.2",
		"dotenv": "16.0.3",
		"eslint": "8.53.0",
		"eslint-plugin-only-warn": "1.1.0",
		"prettier": "3.1.0",
		"typescript": "5.2.2"
	}
}
